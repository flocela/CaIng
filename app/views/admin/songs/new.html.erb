<section class=admin-song-new-wrapper>
  <section class="menu-flex-container">
    <section class=link>
      home
    </section>
    <section class=link>
      admin-home
    </section>
    <section class=selected>
      all songs
    </section>
    <section class=link>
      <%= link_to 'new song', new_admin_song_path %>
    </section>
    <section class=link>
      <%= link_to 'sign-out', destroy_admin_session_path, method: :delete %>
    </section>
  </section> 
  <h1>Cantando Ingl√©s</h1> 
	<h2>New Song</h2>
	<%= form_for [:admin, @song] do |f| %>
		<section class="song-box">
			<section class="song_info">
				<label>
          <section class=description>
					  New Work Title
					</section>
          <section class=input>
            <%= f.text_field(:new_work_title, size:"75") %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  Song Type
          </section>
          <section class=input>
					  <%= f.text_field(:song_type) %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  Original Title in E
          </section>
          <section class=input>
				  	<%= f.text_field(:orig_english_title) %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  Original Artist
          </section>
          <section class=input>
					  <%= f.text_field(:orig_artist) %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  Originally Downloaded At Name
          </section>
          <section class=input>
				  	<%= f.text_field(:orig_downloaded_at_name) %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  Originally Downloaded At Link
          </section>
          <section class=input>
				  	<%= f.text_field(:orig_downloaded_at_link) %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  Original License Name
          </section>
          <section class=input>
				  	<%= f.text_field(:orig_license_name) %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  Original License Link
          </section>
          <section class=input>
				  	<%= f.text_field(:orig_license_link) %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  New License Name
          </section>
          <section class=input>
				  	<%= f.text_field(:name_of_new_work_license) %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  New License Link
          </section>
          <section class=input>
				  	<%= f.text_field(:link_to_new_work_license) %>
          </section>
				</label>
			</section>
			<section class="song_info">
				<label>
          <section class=description>
					  Filename
          </section>
          <section class=input>
				  	<%= f.text_field(:filename) %>
          </section>
				</label>
			</section>
			<%= submit_tag "Create" %>  
		</section>
	<% end %>
</section>

